	"dependencies": {
		"express": "^4.17.1",
		"knex": "^0.20.7",
		"pg": "^7.17.1",
		"sams-chai-sorted": "^1.0.2",
		"supertest": "^4.0.2"
	},
	"devDependencies": {
		"chai": "^4.2.0",
		"mocha": "^7.0.1"
	}
